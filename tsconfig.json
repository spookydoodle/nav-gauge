{
    "compilerOptions": {
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "typeRoots": [
            "@types",
            "node_modules/@types"
        ],
        "outDir": "dist"
    },
    "exclude": [
      "node_modules",
      "build",
      "coverage",
      "vite.*.js",
      "*.config.js",
      "*.test.ts*"
    ],
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    }
}
{
    "compilerOptions": {
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "typeRoots": [
            "@types",
            "node_modules/@types"
        ],
    },
    "include": [
        "@types",
        "src",
        "test"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist",
    ]
}
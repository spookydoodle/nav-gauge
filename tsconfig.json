{
    "compilerOptions": {
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "typeRoots": [
            "@types",
            "node_modules/@types"
        ],
    },
    "exclude": [
        "node_modules",
        "build",
        "coverage",
        "vite.*.js",
        "*.config.js",
        "*.test.ts*",
        "**/*.cy.ts"
    ]
}
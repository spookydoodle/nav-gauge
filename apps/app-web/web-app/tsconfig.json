{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "paths": {
            "@apparatus": [
                "../../packages/apparatus/src/index.ts"
            ],
            "@tinker-chest": [
                "../../packages/tinker-chest/src/index.ts"
            ],
            "@gears": [
                "../../packages/gears/src/index.ts"
            ],
            "@ui": [
                "../../ui/src/index.ts"
            ],
            "@web-ui": [
                "../web-ui/src/index.ts"
            ]
        },
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "types/**/*",
        "../../types/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "cypress",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}